{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "baseUrl": "src",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false,

    "paths": {
      "~app": ["./app"],
      "~app/*": ["./app/*"],

      "~processes": ["./processes"],
      "~processes/*": ["./processes/*"],

      "~pages": ["./pages"],
      "~pages/*": ["./pages/*"],

      "~widgets": ["./widgets"],
      "~widgets/*": ["./widgets/*"],

      "~features": ["./features"],
      "~features/*": ["./features/*"],

      "~entities": ["./entities"],
      "~entities/*": ["./entities/*"],

      "~shared": ["./shared"],
      "~shared/*": ["./shared/*"],
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
